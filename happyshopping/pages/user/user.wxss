/* pages/user/user.wxss */
.user-header{
    width: 100%;
    height: 430rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: linear-gradient(to bottom right,#bcbcbc,#595959);
}
.user-img{
    width: 180rpx;
    height: 180rpx;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
}
.icon-weixin{
    font-size: 140rpx;
    color: #999;
}
.weixin-login{
    margin-top: 40rpx;
    line-height: 70rpx;
    color: #fff;
    width: 300rpx;
    height: 70rpx;
    border: 3rpx solid #fff;
    text-align: center;
    border-radius: 10rpx;
}
.user-body{
    background-color: #fff;
}
.user-order-all{
    display: flex;
    border-bottom: 3rpx solid #999;
    flex-direction: row;
    height: 70rpx;
    font-size: 30rpx;
    align-items: center;
    color: #999;
}
.order-all{
    flex: 1;
    margin-left: 20rpx;
}
.order-look{
    margin-right: 20rpx;
    display: flex;
    flex-direction: row;
}
.user-orders{
    display: flex;
    flex-direction: row;
    height: 150rpx;
    align-items: center;
    color: #999;
    font-size: 30rpx;
}
.order-item{
    width: 20%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.order-item .iconfont{
    font-size: 80rpx;
}